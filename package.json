{
  "name": "adyx-ecommerce",
  "version": "1.0.0",
  "description": "AdyX - A modern, ZARA-style e-commerce platform built with Next.js, Express, and PostgreSQL",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev --workspace=backend\"",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "start": "npm run start --workspace=frontend",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "jest --runInBand",
    "seed": "tsx ./db/seed.ts",
    "prisma:generate": "cd db && npx prisma generate",
    "prisma:migrate": "cd db && npx prisma migrate dev",
    "prisma:studio": "cd db && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "ecommerce",
    "nextjs",
    "stripe",
    "tailwindcss",
    "postgresql",
    "typescript"
  ],
  "author": "AdyX Team",
  "license": "MIT"
}
